{
    "name": "indes/telepush",
    "description": "Your own telegram push bot",
    "keywords": ["telegram"],
    "homepage": "http://github.com/indes/telepush",
    "license": "MIT",
    "authors": [
        {
            "name": "indes",
            "homepage": "http://github.com/indes/"
        }
    ],
    "require": {
        "php": ">=5.5.0",
        "slim/slim": "^3.1",
        "slim/php-view": "^2.0",
        "monolog/monolog": "^1.17",
        "longman/telegram-bot": "^0.54.1",
        "vlucas/phpdotenv": "^2.5"
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.8 < 6.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "process-timeout" : 0
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "test": "phpunit"
    }

}
